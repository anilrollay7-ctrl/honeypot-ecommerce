# ============================================
# MONGODB CONFIGURATION
# ============================================
# REQUIRED: Put your MongoDB connection string here
# 
# Get FREE MongoDB Atlas:
#   1. Go to: https://www.mongodb.com/cloud/atlas
#   2. Sign up (FREE)
#   3. Create FREE M0 cluster
#   4. Get connection string
#
# Example formats:
#   Cloud: mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/
#   Local: mongodb://localhost:27017/
#
# PASTE YOUR MONGODB URL BELOW (replace the default):
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=honeypot_db

# ============================================
# FLASK CONFIGURATION
# ============================================
# SECRET_KEY: Used for session security
# DEFAULT IS FINE for testing/development
# For production: Generate a random key using:
#   python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=honeypot-super-secret-key-change-in-production-2026
FLASK_ENV=development
FLASK_DEBUG=True

# ============================================
# COWRIE HONEYPOT CONFIGURATION
# ============================================
# COWRIE_LOG_PATH: Where Cowrie stores logs
# DEFAULT IS FINE - automatically created
# Only change if you installed Cowrie elsewhere
COWRIE_LOG_PATH=./cowrie/var/log/cowrie
COWRIE_PORT_SSH=2222
COWRIE_PORT_TELNET=2323

# ============================================
# DASHBOARD CONFIGURATION
# ============================================
# DEFAULT IS FINE - Dashboard runs on port 5000
# Change if port 5000 is already in use
DASHBOARD_PORT=5000
DASHBOARD_HOST=0.0.0.0

# ============================================
# LOGS AND SECURITY
# ============================================
# Where to store honeypot security logs
SECURITY_LOGS_PATH=./logs/security
# Enable real-time updates (Server-Sent Events)
ENABLE_REALTIME=True
# Auto-refresh interval (seconds)
REFRESH_INTERVAL=5
